# Kind of exceptions
.define INTERRUPT_TIME		0x0	# Timer Interrupt
.define INTERRUPT_SOFTWARE	0x1	# Software Interrupt
.define INTERRUPT_INSTRUCTION	0x2	# Invalid Instruction
.define INTERRUPT_MEMORY	0x3	# Invalid Memory Location
.define INTERRUPT_DIVISION	0x4	# Division by Zero
.define INTERRUPT_WORLD		0x5	# Invalid World Command
.define INTERRUPT_EVENT		0x6	# World Event


# In the examples ACTION_REG is filled with the ACTION_* action
# Ex: loadi ACTION_REG ACTION_NOTHING

# Do nothing
# Ex: world ACTION_REG UNUSED_REG UNUSED_REG
.define ACTION_NOTHING		0x00

# Get info about the bug itself
# Ex: world ACTION_REG OUTPUT_REG UNUSED_REG
.define ACTION_ID			0x01
# Ex: world ACTION_REG OUTPUT_REG UNUSED_REG
.define ACTION_ENERGY		0x02
# Ex: world ACTION_REG OUTPUT_X_REG OUTPUT_Y_REG
.define ACTION_POSITION		0x03
# Ex: world ACTION_REG OUTPUT_REG UNUSED_REG
.define ACTION_ORIENTATION	0x04

# Detect a object in front of the bug
# Ex: world ACTION_REG UNUSED_REG UNUSED_REG
.define ACTION_DETECT		0x05

# Movements
# Ex: world ACTION_REG UNUSED_REG UNUSED_REG
.define ACTION_MOVE_FORWARD	0x06
# Ex: world ACTION_REG UNUSED_REG UNUSED_REG
.define ACTION_MOVE_BACKWARD	0x07
# Ex: world ACTION_REG UNUSED_REG UNUSED_REG
.define ACTION_TURN_LEFT	0x08
# Ex: world ACTION_REG UNUSED_REG UNUSED_REG
.define ACTION_TURN_RIGHT	0x09

# Fight
# Ex: world ACTION_REG ENERGY_REG UNUSED_REG
.define ACTION_ATTACK		0x0a
# Ex: world ACTION_REG ENERGY_REG UNUSED_REG
.define ACTION_DEFEND		0x0b

# Create a egg
# Ex: world ACTION_REG ENERGY_REG UNUSED_REG
.define ACTION_EGG		0x0c

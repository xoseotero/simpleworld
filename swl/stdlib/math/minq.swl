.include "stdlib/error.swl"
.include "stdlib/address/address.swl"


# Minimum signed value of a block of memory (quarter words).
# IN:  g0 pointer to the block of memory
# IN:  g1 size of the block of memory
# OUT: g0 minimum value
# OUT: g1 error status
#      STD_NOERROR: no errors
#      STD_EINVAL: size is not valid
#      STD_EFAULT: the pointer is not valid
.label std_minq
        # check if the size is valid
        bz g1 _std_bminh_einval

        move r0 g0                      # pointer
        move r1 g1                      # size

        # check if the block is valid
        call std_address
        bz g0 _std_minq_efault

        # search the minimum value
        # load the first element as the minimum
        loadqri r2 r0 0x0               # min
        signq r2 r2

        .label _std_minq_loop
        subi r1 r1 STD_QWORDSIZE
        loadqrr g0 r0 r1
        signq g0 g0
        ble r2 g0 _std_minq_continue
        move r2 g0                      # found a new minimum

        .label _std_minq_continue
        bnz r1 _std_minq_loop

        .label _std_minq_ok
        move g0 r2
        loadi g1 STD_NOERROR
        ret

        .label _std_minq_einval
        loadi g1 STD_EINVAL
        ret

        .label _std_minq_efault
        loadi g1 STD_EFAULT
        ret

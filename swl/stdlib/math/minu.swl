.include "stdlib/error.swl"
.include "stdlib/address/address.swl"


# Minimum unsigned value of a block of memory.
# IN:  g0 pointer to the block of memory
# IN:  g1 size of the block of memory (must be a multiple of STD_WORDSIZE)
# OUT: g0 minimum value
# OUT: g1 error status
#      STD_NOERROR: no errors
#      STD_EINVAL: size is not valid
#      STD_EFAULT: the pointer is not valid
.label std_minu
        # check if the size is valid
        bz g1 _std_minu_einval
        modi g2 g1 STD_WORDSIZE
        bnz g2 _std_minu_einval

        move r0 g0                      # pointer
        move r1 g1                      # size

        # check if the block is valid
        call std_address
        bz g0 _std_minu_efault

        # search the minimum unsigned value
        # load the first element as the minimum
        loadri r2 r0 0x0                # min

        .label _std_minu_loop
        subi r1 r1 STD_WORDSIZE
        loadrr g0 r0 r1
        bleu r2 g0 _std_minu_continue
        move r2 g0                      # found a new minimum

        .label _std_minu_continue
        bnz r1 _std_minu_loop

        .label _std_minu_ok
        move g0 r2
        loadi g1 STD_NOERROR
        ret

        .label _std_minu_einval
        loadi g1 STD_EINVAL
        ret

        .label _std_minu_efault
        loadi g1 STD_EFAULT
        ret

.include "stdlib/def.swl"

.label _std_bits_full
STD_FULL


# Set the bits of a word to 1.
# IN:  g0 word
# IN:  g1 bits
# OUT: g0 new word
.label std_bitsset
        or g0 g0 g1
        ret

# Set the bits of a word to 0.
# IN:  g0 word
# IN:  g1 bits
# OUT: g0 new word
.label std_bitsclear
        load g2 _std_bits_full
        xor g1 g1 g2
        and g0 g0 g1
        ret

# Get the complement of a word.
# IN:  g0 word
# OUT: g0 new word
.label std_bitscomp
        load g1 _std_bits_full
        xor g0 g0 g1
        ret

.include "stdlib/error.swl"
.include "stdlib/address/address.swl"
.include "stdlib/alloc/free.swl"
.include "stdlib/node/free.swl"
.include "stdlib/node/next.swl"
.include "stdlib/stack/def.swl"


# Free the stack.
# IN:  g0 pointer to the stack.
# OUT: g1 error status
#      STD_NOERROR: no errors
#      STD_EFAULT: the pointer is not valid.
.label std_stackfree
        move r0 g0                      # pointer

        # check if the pointer is valid
        loadi g1 STD_STACK_STRUCT
        call std_address
        bz g0 _std_stackfree_efault

        # free all the nodes
        loadri r1 r0 _STD_STACK_TOP     # node
        bz r1 _std_stackfree_free

        .label _std_stackfree_loop
        move g0 r1
        loadi g1 0x1
        call std_next
        bnz g1 _std_stackfree_free

        move r1 g0

        # free the node
        call std_nodefree
        b _std_stackfree_loop

        .label _std_stackfree_free
        # free the list
        move g0 r0
        call std_free

        .label _std_stackfree_ret
        loadi g1 STD_NOERROR
        ret

        .label _std_stackfree_efault
        loadi g1 STD_EFAULT
        ret

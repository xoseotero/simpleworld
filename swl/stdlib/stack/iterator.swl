.include "stdlib/error.swl"
.include "stdlib/address/address.swl"
.include "stdlib/stack/def.swl"


# Get a iterator of the stack.
# The node returned is part of the hierarchy of nodes, not a copy. The only
# secure calls that can be made over the node returned are std_prev and
# std_next.
# If the stack is changed after the call to this function the behaviour is
# undefined.
# IN:  g0 pointer to the stack
# OUT: g0 first node
# OUT: g1 error status
#      STD_NOERROR: no errors
#      STD_EINVAL: the stack is empty
#      STD_EFAULT: the pointer is not valid
.label std_stackiterator
        move r0 g0                      # pointer

        # check if the pointer is valid
        loadi g1 STD_STACK_STRUCT
        call std_address
        bz g0 _std_stackiterator_efault

        # check if the stack is empty
        loadri g0 r0 _STD_STACK_TOP
        bz g0 _std_stackiterator_einval

        .label _std_stackiterator_ret
        loadi g1 STD_NOERROR
        ret

        .label _std_stackiterator_einval
        loadi g1 STD_EINVAL
        ret

        .label _std_stackiterator_efault
        loadi g1 STD_EFAULT
        ret

# Definitions for the errors
.define ERROR_NOERROR	0x0000	# No error

.define ERROR_NOFUNC	0x0001	# Function not implemented

.define ERROR_INVAL	0x0002	# Invalid argument
.define ERROR_RANGE	0x0003	# Math result not representable
.define ERROR_OVERFLOW	0x0004	# Value too large for defined data type



# Variable with the value of the last error
.label error_error
0x00000000	# This should be ERROR_NOERROR, but a 32 bits number must be
		# used

# Linear Congruential Generator (LCG)
# Vi = A * V(i-1) + B
# http://en.wikipedia.org/wiki/Linear_congruential_generator



# Constants for calculate next random value
.label random_a
0x19660d		# 1664525
.label random_b
0x3c6ef35f		# 1013904223

# Seed zero by default
.label random_seed
0x0



# Calculate a new random value
# OUT: r0 the random value
.label random_value
	load r0 random_seed
	load r1 random_a
	load r2 random_b

	# Vi = A * V(i - 1) + B
	multl r0 r0 r1
	add r0 r0 r2

	# Update seed
	store r0 random_seed

	ret

# Boolean values
.define STD_FALSE       0x0000
.define STD_TRUE        0x0001          # any value different than 0

# NULL pointer
.define STD_NULL        0x0000

# Sizes of addressable memory
.define STD_WORDSIZE    0x4
.define STD_HWORDSIZE   0x2
.define STD_QWORDSIZE   0x1

# Word with all bits to 0.
.define STD_WORDZERO    0x00000000
# Word with all bits to 1.
.define STD_WORDFULL    0xFFFFFFFF

# Minimum signed value.
.define STD_WORDMIN     0x80000000
# Maximum signed value.
.define STD_WORDMAX     0x7FFFFFFF
# Minimum unsigned value.
.define STD_WORDMINU    0x00000000
# Maximum unsigned value.
.define STD_WORDMAXU    0xFFFFFFFF

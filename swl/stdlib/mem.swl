# Count the times that a word is found in a block of memory.
# IN:  r0 pointer
# IN:  r1 size of the block of memory
# IN:  r2 value
# OUT: r0 number of elements found
# OUT: r1 error status
#      STD_NOERROR: no errors
#      STD_EINVAL:  size is not valid
#      STD_EFAULT:  the pointer is not valid
.label std_count
        push r0                         # pointer is in fp + 0x0
        push r1                         # size is in fp + 0x4
        push r2                         # value is in fp + 0x8

        # check if the size is valid
        bz r1 _std_count_einval
        modi r3 r1 STD_WORDSIZE
        bnz r3 _std_count_einval

        # check if the block is valid
        call std_address
        bz r0 _std_count_efault

        # restore the parameters
        loadri r0 fp 0x0
        loadri r1 fp 0x4
        loadri r2 fp 0x8

        # count the values
        loadi r3 0x0
        loadi r4 0x0                    # counter

        .label _std_count_loop
        loadrr r5 r0 r3
        bne r2 r5 _std_count_notequal
        addi r4 r4 0x1                  # element found

        .label _std_count_notequal
        addi r3 r3 STD_WORDSIZE
        bne r1 r3 _std_count_loop

        .label _std_count_ok
        move r0 r4
        loadi r1 STD_NOERROR
        ret

        .label _std_count_einval
        loadi r1 STD_EINVAL
        ret

        .label _std_count_efault
        loadi r1 STD_EFAULT
        ret


# Copy a block of memory (quarter word by quarter word).
# IN:  r0 destination pointer
# IN:  r1 source pointer
# IN:  r2 size of the block of memory
# OUT: r1 error status
#      STD_NOERROR: no errors
#      STD_EINVAL:  size is not valid
#      STD_EFAULT:  the pointers are not valid
.label std_copy
        push r0                         # dst is in fp + 0x0
        push r1                         # src is in fp + 0x4
        push r2                         # size is in fp + 0x8

        # check if the size is valid
        bz r1 _std_copy_einval

        # check if the dst block is valid
        move r1 r2
        call std_address
        bz r0 _std_copy_efault

        # check if the src block is valid
        loadri r0 fp 0x4
        loadri r1 fp 0x8
        call std_address
        bz r0 _std_copy_efault

        # restore the parameters
        loadri r0 fp 0x0
        loadri r1 fp 0x4
        loadri r2 fp 0x8

        # copy the block
        .label _std_copy_loop
        subi r2 r2 STD_QWORDSIZE
        loadqrr r3 r1 r2
        storeqrr r0 r3 r2
        bnz r2 _std_copy_loop

        .label _std_copy_ok
        loadi r1 STD_NOERROR
        ret

        .label _std_copy_einval
        loadi r1 STD_EINVAL
        ret

        .label _std_copy_efault
        loadi r1 STD_EFAULT
        ret


# Compare two blocks of memory (quarter word by quarter word).
# IN:  r0 pointer1
# IN:  r1 pointer2
# IN:  r2 size of the block of memory
# OUT: r0 difference
#      < 0: pointer1 < pointer2
#      = 0: pointer1 = pointer2
#      > 0: pointer1 > pointer2
# OUT: r1 error status
#      STD_NOERROR: no errors
#      STD_EFAULT:  the pointers are not valid
.label std_cmp
        push r0                         # pt1 is in fp + 0x0
        push r1                         # pt2 is in fp + 0x4
        push r2                         # size is in fp + 0x8

        # check if the size is valid
        bz r2 _std_cmp_einval

        # check if the first block is valid
        move r1 r2
        call std_address
        bz r0 _std_cmp_efault

        # check if the second block is valid
        loadri r0 fp 0x4
        loadri r1 fp 0x8
        call std_address
        bz r0 _std_cmp_efault

        # restore the parameters
        loadri r0 fp 0x0
        loadri r1 fp 0x4
        loadri r2 fp 0x8

        # compare the block
        loadi r3 0x0

        .label _std_cmp_loop
        loadqrr r4 r0 r3
        loadqrr r5 r1 r3
        sub r6 r4 r5
        bnz r6 _std_cmp_notequal

        addi r3 r3 STD_QWORDSIZE
        bne r2 r3 _std_cmp_loop

        .label _std_cmp_equal
        loadi r0 0x0
        loadi r1 STD_NOERROR
        ret

        .label _std_cmp_notequal
        move r0 r6                      # r6 is the difference
        loadi r1 STD_NOERROR
        ret

        .label _std_cmp_einval
        loadi r1 STD_EINVAL
        ret

        .label _std_cmp_efault
        loadi r1 STD_EFAULT
        ret


# Find a word in a block of memory.
# IN:  r0 pointer
# IN:  r1 size of the block of memory
# IN:  r2 value
# OUT: r0 offset of the value
# OUT: r1 error status
#      STD_NOERROR: no errors
#      STD_EINVAL:  size is not valid or the value was not found
#      STD_EFAULT:  the pointer is not valid
.label std_find
        push r0                         # pointer is in fp + 0x0
        push r1                         # size is in fp + 0x4
        push r2                         # value is in fp + 0x8

        # check if the size is valid
        bz r1 _std_find_einval
        modi r3 r1 STD_WORDSIZE
        bnz r3 _std_find_einval

        # check if the block is valid
        call std_address
        bz r0 _std_find_efault

        # restore the parameters
        loadri r0 fp 0x0
        loadri r1 fp 0x4
        loadri r2 fp 0x8

        # find the value
        loadi r3 0x0

        .label _std_find_loop
        loadrr r4 r0 r3
        beq r2 r4 _std_find_found

        addi r3 r3 STD_WORDSIZE
        bne r1 r3 _std_find_loop

        .label _std_find_einval
        loadi r1 STD_EINVAL
        ret

        .label _std_find_found
        move r0 r3                      # r3 is the offset of the element
        loadi r1 STD_NOERROR
        ret

        .label _std_find_efault
        loadi r1 STD_EFAULT
        ret


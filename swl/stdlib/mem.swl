.include "stdlib/def.swl"
.include "stdlib/error.swl"
.include "stdlib/address.swl"

# Set all the words of a block of memory to a value.
# IN:  r0 pointer
# IN:  r1 size of the block of memory
# IN:  r2 value
# OUT: r1 error status
#      STD_NOERROR: no errors
#      STD_EINVAL:  size is not valid
#      STD_EFAULT:  the pointer is not valid
.label std_fill
        push r0                         # pointer is in fp + 0x0
        push r1                         # size is in fp + 0x4
        push r2                         # value is in fp + 0x8

        # check if the size is valid
        bz r1 _std_fill_einval
        modi r3 r1 STD_WORDSIZE
        bnz r3 _std_fill_einval

        # check if the block is valid
        call std_address
        bz r0 _std_fill_efault

        # restore the parameters
        loadri r0 fp 0x0
        loadri r1 fp 0x4
        loadri r2 fp 0x8

        # set all the block to the value
        .label _std_fill_loop
        subi r1 r1 STD_WORDSIZE
        storerr r0 r2 r1
        bnz r1 _std_fill_loop

        .label _std_fill_ok
        loadi r1 STD_NOERROR
        ret

        .label _std_fill_einval
        loadi r1 STD_EINVAL
        ret

        .label _std_fill_efault
        loadi r1 STD_EFAULT
        ret


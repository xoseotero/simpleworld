.include "stdlib/def.swl"
.include "stdlib/error.swl"
.include "stdlib/world.swl"
.include "stdlib/int.swl"

# current time
.label _std_time
.block STD_WORDSIZE


# Handler for the timer interrupt.
# IN:  g0 type of interrupt
.label _std_timerhandler
        load g0 _std_time
        addi g0 g0 0x1
        store g0 _std_time
        ret

# Initialize the time.
# IN:  g0 cycles
# OUT: g1 error status
#      STD_NOERROR: no errors
#      STD_ENOMEM:  there is not enough memory
.label _std_timeinit
        # initialize the time
        store g0 _std_time

        # insert the timer interrupt
        loadi g0 STD_ITIMER
        loada g1 _std_timerhandler
        call std_handler
        bnz g1 __std_timeinit_enomem

        .label __std_timeinit_ok
        loadi g1 STD_NOERROR
        ret

        .label __std_timeinit_enomem
        #loadi g1 STD_ENOMEM  # not needed because std_handler already sets it
        ret

# Get the current time.
# OUT: g0 cycles
.label std_time
        load g0 _std_time
        ret

# Sleep during some cycles.
# IN:  g0 cycles to sleep
.label std_sleep
        # don't sleep if cycles are 0
        bz g0 _std_sleep_ret

        load r0 _std_time
        add r0 g0 r0

        # loop while time < g0
        .label _std_sleep_loop
        world STD_NOTHING

        load g0 _std_time
        bltu g0 r0 _std_sleep_loop

        .label _std_sleep_ret
        ret

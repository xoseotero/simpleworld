# Summation of a block of memory.
# IN:  g0 pointer to the block of memory
# IN:  g1 size in words of the block of memory
# OUT: g0 summation value
# OUT: g1 error status
#      STD_NOERROR: no errors
#      STD_EFAULT: the pointer is not valid
.label std_bsum
        push g0                         # pointer is in fp + 0x0
        push g1                         # size is in fp + 0x4

        # check if the block is valid
        call std_address
        bz g0 _std_bsum_efault

        # restore the parameters
        loadri g0 fp 0x0
        loadri g1 fp 0x4

        # calculate the summation
        loadi g2 0x0                    # begin with 0

        .label _std_bsum_loop
        subi g1 g1 STD_WORDSIZE
        loadrr g3 g0 g1
        add g2 g2 g3
        bnz g1 _std_bsum_loop

        .label _std_bsum_ok
        move g0 g2
        loadi g1 STD_NOERROR
        ret

        .label _std_bsum_efault
        loadi g1 STD_EFAULT
        ret


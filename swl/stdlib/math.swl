# MAX and MIN for unsigned words
.label _std_math_word_zero              # A word with all the bits to 0
STD_ZERO
.label _std_math_word_full              # A word with all the bits to 1
STD_FULL


# Calculate the negative value.
# 0x80000000 can't be converted to positive and the same value is returned
# IN:  g0 the value
# OUT: g0 the negative value
.label std_neg
        load g1 _std_math_word_full
        xor g0 g0 g1
        addi g0 g0 0x0001

        ret

# Calculate the absolute value.
# 0x80000000 can't be converted to positive and the same value is returned
# IN:  g0 the value
# OUT: g0 the absolute value
.label std_abs
        # Check if the value is negative
        srli g1 g0 0x1F
        bz g1 _std_abs_ret
        call std_neg

        .label _std_abs_ret
        ret


# Calculate the pow.
# IN:  g0 base
# IN:  g1 exponent
# OUT: g0 the result
# OUT: g1 error status
#      STD_EOVERFLOW: value too large (not implemented)
.label std_pow
        move g2 g0
        load g3 _std_math_word_zero
        loadi g0 0x1

        .label _std_math_pow_continue
        beq g1 g3 _std_math_pow_return
        mult g0 g0 g2
        subi g1 g1 0x1
        b _std_math_pow_continue

        .label _std_math_pow_return
        ret


# Minimum signed value.
# IN:  g0 first value
# IN:  g1 second value
# OUT: g0 minimum value
.label std_min
        blt g1 g0 _std_min_second

        .label _std_min_first
        ret

        .label _std_min_second
        move g0 g1
        ret


# Minimum signed value of a block of memory.
# IN:  g0 pointer to the block of memory
# IN:  g1 size of the block of memory (must be a multiple of STD_WORDSIZE)
# OUT: g0 minimum value
# OUT: g1 error status
#      STD_NOERROR: no errors
#      STD_EINVAL: size is not valid
#      STD_EFAULT: the pointer is not valid
.label std_bmin
        push g0                         # pointer is in fp + 0x0
        push g1                         # size is in fp + 0x4

        # check if the size is valid
        bz g1 _std_bmin_einval
        modi g2 g1 STD_WORDSIZE
        bnz g2 _std_bmin_einval

        # check if the block is valid
        call std_address
        bz g0 _std_bmin_efault

        # restore the parameters
        loadri g0 fp 0x0
        loadri g1 fp 0x4

        # search the minimum value
        loadri g2 g0 0x0                # load the first element as the minimum

        .label _std_bmin_loop
        subi g1 g1 STD_WORDSIZE
        loadrr g3 g0 g1
        ble g2 g3 _std_bmin_continue
        move g2 g3                      # found a new minimum

        .label _std_bmin_continue
        bnz g1 _std_bmin_loop

        .label _std_bmin_ok
        move g0 g2
        loadi g1 STD_NOERROR
        ret

        .label _std_bmin_einval
        loadi g1 STD_EINVAL
        ret

        .label _std_bmin_efault
        loadi g1 STD_EFAULT
        ret


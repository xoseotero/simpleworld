# Average (signed) value of a block of memory.
# IN:  g0 pointer to the block of memory
# IN:  g1 size in words of the block of memory
# OUT: g0 average value
# OUT: g1 error status
#      STD_NOERROR: no errors
#      STD_EFAULT: the pointer is not valid
.label std_bavg
        push g1                         # size is in fp + 0x0

        # calculate the summation
        call std_bsum
        bnz g1 _std_bavg_efault

        # restore the parameters
        loadri g1 fp 0x0

        # calculate the average value
        divi g1 g1 STD_WORDSIZE
        div g0 g0 g1

        .label _std_bavg_ok
        loadi g1 STD_NOERROR
        ret

        .label _std_bavg_efault
        #loadi g1 STD_EFAULT            # not needed because std_bsum already
                                        # sets it
        ret


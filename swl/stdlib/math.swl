# Average (signed) value of a block of memory.
# IN:  g0 pointer to the block of memory
# IN:  g1 size of the block of memory (must be a multiple of STD_WORDSIZE)
# OUT: g0 average value
# OUT: g1 error status
#      STD_NOERROR: no errors
#      STD_EINVAL: size is not valid
#      STD_EFAULT: the pointer is not valid
.label std_bavg
        move r0 g1                      # size

        # calculate the summation
        call std_bsum
        bnz g1 _std_bavg_error

        # calculate the average value
        divi r0 r0 STD_WORDSIZE
        div g0 g0 r0

        .label _std_bavg_ok
        loadi g1 STD_NOERROR
        ret

        .label _std_bavg_error
        # use the same error code from std_bsum
        ret


.include "macros.swl"

.ifndef VALUE2
.define VALUE2 0x0003
.endif
.ifndef VALUE3
.define VALUE3 0x000F
.endif

# Loop
.label init
       # load the initial values
       loadi g1 VALUE1
       loadi g2 VALUE2

       # some operations
       add g0 g1 g2
       move g0 g1
       swap g2 g2

.ifdef VALUE1
       push g0
       div g0 g1 g2

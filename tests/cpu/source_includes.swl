# Test code for source_test.cpp

.define A 0x0001
.define B 0x0002

# Loop
.label init
       # load the initial values
       loadi r1 A
       loadi r2 B

       # some operations
       add r0 r1 r2
       move r0 r1
       swap r2 r2

       push r0
       div r0 r1 r2
       pop r0
       rri r0 r0 0xf

       # restart the CPU
       restart

       b init		# loop

# 4 bytes for the stack
.label stack
.block 0x4
